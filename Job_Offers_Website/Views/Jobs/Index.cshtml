@model IEnumerable<Job_Offers_Website.Models.Job>

@{
    ViewBag.Title = "View Jobs";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>List of Jobs</h2>

<p>
    @Html.ActionLink("Create New Job", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <!--puisqu'on a mentionné la relation entre Job et Category dans le /Models/, on peut récupérer les infos de Category dans ce View de Jobs-->
            @Html.DisplayNameFor(model => model.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobContent)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.JobImage)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Category.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobTitle)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.JobContent)
        </td>
        <td>
            <img src="~/Uploads/@Html.DisplayFor(modelItem => item.JobImage)" class="thumbnail" style="width:48px; height:48px" />
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
