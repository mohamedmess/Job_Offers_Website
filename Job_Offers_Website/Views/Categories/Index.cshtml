@model IEnumerable<Job_Offers_Website.Models.Category>

@{
    ViewBag.Title = "List of Job Categories";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>List of Job Categories</h2>

<p>
    @Html.ActionLink("Create New Category", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryDescription)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CategoryDescription)
        </td>
        <!--On ajoute ces Linkbutton pour chaque element dans le tableau -->
        <td>
            @Html.ActionLink("Edit Category", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Category Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete Category", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
